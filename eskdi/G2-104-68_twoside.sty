  {%
    \setlength{\oddsidemargin}{0mm}%
    \setcounter{evenpage}{1}%
  }%
  {%
    \ifthenelse{\equal{\value{evenpage}}{1}}%
    {%     
      \setlength{\oddsidemargin}{0mm}%
    }%
    {%
      \ifthenelse{\equal{\value{evenpage}}{2}}%
