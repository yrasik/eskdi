%Для изменения размера страницы
\newcommand{\FormatSizeA}[2]
{%
  \clearpage%
  \setcounter{evenpage}{1}%  
  \setlength{\oddsidemargin}{0mm}%  
  \StampA{#1}%
  \PageSizeFormat%
  \TextSizeFormat{#1}%
  \expandafter{#2}%
  %Вернули всё назад
  \clearpage%
  \StampA{4}%
  \PageSizeFormat%
  \TextSizeFormat{4}%
  \setcounter{evenpage}{1}%
}%



